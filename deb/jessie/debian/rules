#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

#export DH_ALWAYS_EXCLUDE=GIT:.gitignore

%:
	dh $@ 

override_dh_install:
	dh_install
	find ./debian/gluu-server-4.0 -name "*.gitignore" -delete

override_dh_perl:
override_dh_link:
override_dh_strip:
override_dh_compress:
override_dh_makeshlibs:
override_dh_shlibdeps:
override_dh_strip_nondeterminism:
override_dh_fixperms:
	dh_fixperms
	chmod 544 ./debian/gluu-server-4.0/opt/gluu-server/tmp/system_user.list
	chmod 544 ./debian/gluu-server-4.0/opt/gluu-server/tmp/system_group.list
	chmod 755 ./debian/gluu-server-4.0/opt/gluu-server/lib/x86_64-linux-gnu/ld-2.19.so
	chmod 755 ./debian/gluu-server-4.0/opt/gluu-server/lib/x86_64-linux-gnu/libc-2.19.so
	chmod 755 ./debian/gluu-server-4.0/opt/gluu-server/lib/x86_64-linux-gnu/libpthread-2.19.so
